<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300"
		Height="300"
		Width="300"
        x:Class="RegPageDiana.Window1"
        Title="Window1"
		Background="Transparent">
	<Border CornerRadius="10" Background="#1e143e">
		<StackPanel Margin="10 0 10 0">
			<TextBlock Text="Information:" FontSize="20" Foreground="White" Margin="0 0 0 20"/>
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="First name: " Foreground="White"/>
				<TextBlock Name="Text1" Text="." Foreground="White" Margin="0 0 0 10"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Last name: " Foreground="White"/>
				<TextBlock Name="Text2" Text="." Foreground="White" Margin="0 0 0 10"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Email: " Foreground="White" />
				<TextBlock Name="Email" Text="." Foreground="White" Margin="0 0 0 10"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Password: " Foreground="White"/>
				<TextBlock Name="Password" Text="." Foreground="White"/>
			</StackPanel>
		</StackPanel>
	</Border>
</Window>
